{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": ["config:recommended"],
    "packageRules": [
        {
            "matchPackageNames": ["camelcase"],
            "enabled": false
        },
        {
            "matchPackagePatterns": ["@api3/.*", "@phase21/.*"],
            "matchUpdateTypes": ["major"],
            "schedule": ["before 4pm"],
            "groupName": "api3 major updates"
        },
        {
            "matchPackageNames": ["@phase21/chains"],
            "matchUpdateTypes": ["patch", "minor"],
            "schedule": ["before 3pm"],
            "groupName": "api3"
        },
        {
            "matchUpdateTypes": ["patch", "minor"],
            "schedule": ["after 3pm on Friday"],
            "groupName": "other minor updates"
        },
        {
            "matchDepTypes": ["devDependencies"],
            "matchUpdateTypes": ["major"],
            "schedule": ["after 1pm on Friday"],
            "groupName": "other major updates"
        }
    ],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": false
    },
    "reviewers": ["hiletmis"],
    "dependencyDashboard": false
}

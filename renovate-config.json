{
    "$schema": "https://docs.renovatebot.com/renovate-schema.json",
    "extends": [
        "config:base"
    ],
    "packageRules": [
        {
            "matchPackageNames": [
                "camelcase"
            ],
            "enabled": false
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchPackagePatterns": [
                "@api3\/.*",
                "@nodary\/.*"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "groupName": "api3 major updates"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchPackagePatterns": [
                "@api3\/.*",
                "@nodary\/.*"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "groupName": "api3"
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "patch",
                "minor"
            ],
            "groupName": "other minor updates",
            "schedule": [
                "before 7am on the first day of the week"
            ]
        },
        {
            "matchDepTypes": [
                "devDependencies"
            ],
            "matchUpdateTypes": [
                "major"
            ],
            "groupName": "other major updates",
            "schedule": [
                "before 7am on the first day of the month"
            ]
        }
    ],
    "rangeStrategy": "bump",
    "lockFileMaintenance": {
        "enabled": false
    },
    "reviewers": [
        "hiletmis"
    ],
    "dependencyDashboard": false
}